{
	"compilerOptions": {
	  "allowSyntheticDefaultImports": true,
	  "esModuleInterop": true,
	  "noUnusedLocals": true,
	  "noUnusedParameters": true,
	  "experimentalDecorators": true,
	  "lib": ["es6"],
	  "module": "nodenext",
	  "noEmit": false,
	  "removeComments": true,
	  "moduleResolution": "nodenext",
	  "resolveJsonModule": true,
	  "sourceMap": true,
	  "skipLibCheck": true,
	  "declaration": false,
	  "target": "esnext",
	  "outDir": "out"
	},
	"include": [
	  "src/**/*"
	],
	"exclude": [
	  "node_modules"
	]
  }